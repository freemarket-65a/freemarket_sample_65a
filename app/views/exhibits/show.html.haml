= render 'products/header'
.d-container
  
  .d-main
    .d-product
      %h1= @exhibit.name
    .d-image
      - @exhibit.images.each do |image|
        = image_tag image.src.url
      .d-image__inner

    %table.d-table
      %tbody
        %tr
          %th 出品者
          %td= @exhibit.user.nickname
        %tr
          %th カテゴリー
          %td= @exhibit.category
        %tr
          %th ブランド
          %td 
        %tr
          %th 商品の状態
          %td= @exhibit.condition
        %tr
          %th 配送料の負担
          %td= @exhibit.delicharge
        %tr
          %th 配送の方法
          %td 未定
        %tr
          %th 配送元地域
          %td= @exhibit.shipfrom
        %tr
          %th 発送日の目安
          %td= @exhibit.dalidate
   
    .d-price
      = "¥#{@exhibit.price}"
      %span#tax (税込) 
      %span#postage 送料込み
      %br

      - if user_signed_in?
        = link_to '編集', edit_exhibit_path(@exhibit)
        = link_to '削除', exhibit_path(@exhibit), method: :delete


      = link_to "購入画面に進む", "https://www.mercari.com/jp/signup/registration/", class: "btn btn-buy"
   
    .d-text= @exhibit.detail

  .user-item
    .user-item__title
      = @exhibit.user.nickname
      さんのその他の出品
    .user-item__box
      = image_tag "logo_gray.svg"
      .user-item__box--name
        text
